<ac:macro ac:name="panel">
	<ac:parameter ac:name="bgColor">#F9F9F9</ac:parameter>
	<ac:parameter ac:name="borderColor">black</ac:parameter>
	<ac:rich-text-body>
	
		<ac:macro ac:name="warning">
			<ac:parameter ac:name="icon">true</ac:parameter>
			<ac:parameter ac:name="title">Message</ac:parameter>
			<ac:rich-text-body>
				Message has been created by <strong>[% message.creator.name %]</strong> on <code>[% topic.created_at %]</code>
			</ac:rich-text-body>
		</ac:macro>
		<p>
		[% message.content %]
		</p>
		
		[% IF message.attachments.size %]
			<hr />
			[%  FOREACH attachment IN message.attachments %]
				[% IF (index(attachment.content_type, 'image') != -1) %]
				<ac:image ac:thumbnail="true" ac:width="200">
					<ri:attachment ri:filename="[% attachment.name %]" />
				</ac:image>
				[% ELSE %]
					<ac:link>
						<ri:attachment ri:filename="[% attachment.name %]" />
					</ac:link>
				[% END %]
			[%  END %]
		[% END %]
		
	</ac:rich-text-body>
</ac:macro>



<br />
<br />
[%  FOREACH comment IN message.comments %]

<ac:macro ac:name="panel">
	<ac:parameter ac:name="bgColor">#F9F9F9</ac:parameter>
	<ac:parameter ac:name="borderColor">black</ac:parameter>
	<ac:rich-text-body>
		<ac:macro ac:name="section">
			<ac:rich-text-body>
				<ac:macro ac:name="column">
					<ac:parameter ac:name="width">5%</ac:parameter>
					<ac:rich-text-body>
						<p>
							<ac:macro ac:name="status">
								<ac:parameter ac:name="colour">Yellow</ac:parameter>
								<ac:parameter ac:name="title">[% comment.creator.name %]</ac:parameter>
							</ac:macro>
						</p>
					</ac:rich-text-body>
				</ac:macro>
				<ac:macro ac:name="column">
					<ac:rich-text-body>
						<p>
							<strong>Posted On:</strong>&nbsp;&nbsp;<code>[% comment.created_at %]</code>
						</p>
						<p>
							[% comment.content %] 
						</p>
						[% IF comment.attachments.size %]
						<hr />
						[%  FOREACH attachment IN comment.attachments %]
							[% IF (index(attachment.content_type, 'image') != -1) %]
								<ac:image ac:thumbnail="true" ac:width="200">
									<ri:attachment ri:filename="[% attachment.name %]" />
								</ac:image>
							[% ELSE %]
								<ac:link>
									<ri:attachment ri:filename="[% attachment.name %]" />
								</ac:link>
							[% END %]
						[%  END %]
						[% END %]
					</ac:rich-text-body>
				</ac:macro>
			</ac:rich-text-body>
		</ac:macro>
	</ac:rich-text-body>
</ac:macro>

<br />
[% END %]




